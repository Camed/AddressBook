@page
@model IndexModel
@{
    ViewData["Title"] = "FizzBuzz";
}

<span asp-validation-for="FizzBuzz.fbNumber" class="text-danger"></span>

<div class="text-center">
    <h1 class="display-4">Welcome, please enter the number</h1>
    <form method="post">
        <div class="row">
            <div class="col">
                <label asp-for="FizzBuzz.fbNumber"></label><br />
                <input asp-for="FizzBuzz.fbNumber"/>
            </div>
        </div>
        <div class="text-center">
            <br /><br /><br />
            <button type="submit" class="btn-primary">Zatwierdź</button>
        </div>

    </form>
</div>
@Model.readSize <br />
<h1>Downloaded from JSON: </h1>
<div class="text-left">
    @foreach (var prod in Model.Products)
    {
        <div class="row">
            <div class="col">
                <h4>@prod.Realid</h4>
                <h4>@prod.Title</h4>
                <h4>@prod.Url</h4>
            </div>
        </div>
    }
</div>

<h1>Downloaded from DB: </h1>
<div class="text-left">
    @foreach (var prod in Model.DBProducts)
    {
        <div class="row">
            <div class="col">
                <h4>@prod.Realid</h4>
                <h4>@prod.Title</h4>
                <h4>@prod.Url</h4>
            </div>
        </div>
    }
</div>